.container {
  padding: 20px;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.search-bar input {
  flex: 1;
  padding: 8px;
  margin-right: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.search-bar button {
  padding: 8px 16px;
  border: none;
  width: 30%;
  background-color: blueviolet;
  color: white;
  margin: 0;
  border-radius: 4px;
}

image {
  width: 100%;
}

.vote {
  margin-bottom: 20px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.options {
  margin-top: 5px;
  margin-left: 10px;
}

button {
  display: block;
  margin-bottom: 10px;
}
