/* createVote.wxss */
.container {
  padding: 20px;
  background-color: #f8f8f8;
}

.header {
  margin-bottom: 20px;
  text-align: center;
  font-size: 24px;
  font-weight: bold;
}

.title-input {
  width: 100%;
  padding: 10px;
  margin-bottom: 20px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.options {
  margin-bottom: 20px;
}

.option {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.option input {
  flex: 1;
  padding: 10px;
  margin-right: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.remove-btn {
  flex-shrink: 0;
  padding: 10px;
  background-color: #ff4d4f;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.remove-btn:hover {
  background-color: #ff7875;
}

.add-option-btn, .create-vote-btn {
  width: 100%;
  padding: 15px;
  margin-bottom: 10px;
  background-color: #1890ff;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  text-align: center;
}

.add-option-btn:hover, .create-vote-btn:hover {
  background-color: #40a9ff;
}
